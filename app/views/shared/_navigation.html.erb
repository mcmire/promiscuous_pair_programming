<% if current_user %>
<div id="account_management">
  <%= link_to "Sign out", destroy_user_session_path %>
</div>
<div id="welcome">
  Hello <%= current_user.full_name %>!
  <span id="client-location"></span>
</div>
<div id="navigation">
  <%=link_to "My Sessions", pairing_sessions_path %><br/>
  <%=link_to "Edit my account", edit_user_registration_path %>
</div>
<% else %>
<div id="account_management">
  <%= link_to "Create an account", new_user_registration_path %> or
  <%= link_to "Sign in", new_user_session_path %>
</div>
<% end %>